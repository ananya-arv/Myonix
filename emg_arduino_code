// Define the pin connected to the EMG sensor's signal output
const int emgPin = 34; // this is just an exmaple, use any analog pin on your ESP32

void setup() {
  // Initialize serial communication at a high baud rate
  Serial.begin(115200);
  Serial.println("EMG Sensor Test");
}

void loop() {
  // Read the analog value from the EMG sensor
  int sensorValue = analogRead(emgPin);

  // Print the value to the serial monitor
  Serial.println(sensorValue);

  // Small delay to make the data stream readable
  delay(10);
}

//open serial monitor to see the data stream live 
